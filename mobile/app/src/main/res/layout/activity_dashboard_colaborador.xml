<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFCA1"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/your_logo" />

        <!-- Container -->
        <LinearLayout
            android:id="@+id/dashboardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFEB3B"
            android:padding="20dp"
            android:elevation="4dp"
            android:layout_gravity="center"
            android:clipToPadding="true"
            android:layout_marginBottom="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/dashboardTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bem-vindo Colaborador!"
                android:textSize="24sp"
                android:textColor="#333"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:textStyle="bold" />

            <!-- Buttons -->
            <Button
                android:id="@+id/registerScheduleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cadastrar Horários para Atendimentos"
                android:backgroundTint="#333"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/checkRequestsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verificar Solicitações de Consultas"
                android:backgroundTint="#333"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/patientNotesButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fazer Anotações de Pacientes"
                android:backgroundTint="#333"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sair"
                android:backgroundTint="#333"
                android:textColor="#FFF"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
